<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme with Material 3 Dynamic Colors -->
  <style name="Base.AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Primary colors -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
    <item name="colorOnPrimary">@color/colorOnPrimary</item>
    
    <!-- Secondary colors -->
    <item name="colorSecondary">@color/colorSecondary</item>
    <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
    <item name="colorOnSecondary">@color/colorOnSecondary</item>
    
    <!-- Tertiary color -->
    <item name="colorTertiary">@color/colorTertiary</item>
    
    <!-- Surface colors -->
    <item name="colorSurface">@color/colorSurface</item>
    <item name="colorOnSurface">@color/colorOnSurface</item>
    <item name="android:colorBackground">@color/colorBackground</item>
    
    <!-- Error color -->
    <item name="colorError">@color/colorError</item>
    <item name="colorOnError">@color/colorOnError</item>
    
    <!-- Status bar and navigation bar - lighter for better look -->
    <item name="android:statusBarColor">@color/colorBackground</item>
    <item name="android:navigationBarColor">@color/colorBackground</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    
    <!-- Bottom Sheet style -->
    <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    
    <!-- Dialog theme -->
    <item name="materialAlertDialogTheme">@style/MaterialAlertDialogTheme</item>
  </style>

  <style name="AppTheme" parent="Base.AppTheme" />
  
  <!-- Tab text appearance -->
  <style name="TabTextAppearance" parent="TextAppearance.MaterialComponents.Button">
    <item name="android:textSize">14sp</item>
    <item name="android:textAllCaps">false</item>
    <item name="fontFamily">sans-serif-medium</item>
  </style>
  
  <!-- Bottom Sheet Dialog Theme -->
  <style name="AppBottomSheetDialogTheme" parent="Theme.Material3.DayNight.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowSoftInputMode">adjustResize</item>
  </style>
  
  <style name="AppBottomSheetStyle" parent="Widget.Material3.BottomSheet">
    <item name="shapeAppearanceOverlay">@style/BottomSheetShapeAppearance</item>
    <item name="backgroundTint">@color/cardBackground</item>
  </style>
  
  <style name="BottomSheetShapeAppearance" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSizeTopLeft">20dp</item>
    <item name="cornerSizeTopRight">20dp</item>
    <item name="cornerSizeBottomLeft">0dp</item>
    <item name="cornerSizeBottomRight">0dp</item>
  </style>
  
  <!-- Material Alert Dialog Theme -->
  <style name="MaterialAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
    <item name="shapeAppearanceOverlay">@style/DialogShapeAppearance</item>
  </style>
  
  <style name="DialogShapeAppearance" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">24dp</item>
  </style>
  
  <!-- Category header card style -->
  <style name="CategoryCardStyle" parent="Widget.Material3.CardView.Elevated">
    <item name="cardElevation">2dp</item>
    <item name="cardCornerRadius">12dp</item>
    <item name="cardBackgroundColor">@color/cardBackground</item>
    <item name="strokeWidth">0dp</item>
  </style>
  
  <!-- Setting item card style -->
  <style name="SettingCardStyle" parent="Widget.Material3.CardView.Outlined">
    <item name="cardElevation">1dp</item>
    <item name="cardCornerRadius">12dp</item>
    <item name="cardBackgroundColor">@color/cardBackground</item>
    <item name="strokeWidth">1dp</item>
    <item name="strokeColor">@color/divider</item>
  </style>
  
  <!-- Identity Notification Dialog Style -->
  <style name="IdentityNotificationDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
    <item name="shapeAppearanceOverlay">@style/DialogShapeAppearance</item>
    <item name="colorPrimary">@color/colorPrimary</item>
  </style>
  
  <!-- Splash Screen Theme -->
  <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
    <item name="android:windowBackground">@color/splash_background</item>
    <item name="android:statusBarColor">@color/splash_background</item>
    <item name="android:navigationBarColor">@color/splash_background</item>
    <item name="android:windowLightStatusBar">false</item>
    <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    <item name="postSplashScreenTheme">@style/AppTheme</item>
  </style>
  
  <!-- Settings toggle switch style -->
  <style name="SettingsSwitchStyle" parent="Widget.Material3.CompoundButton.MaterialSwitch">
    <item name="trackTint">@color/switch_track_selector</item>
    <item name="thumbTint">@color/switch_thumb_selector</item>
  </style>
  
  <!-- Options dialog radio button style -->
  <style name="OptionsRadioButtonStyle" parent="Widget.Material3.CompoundButton.RadioButton">
    <item name="buttonTint">@color/colorPrimary</item>
  </style>
</resources>
