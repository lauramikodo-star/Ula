<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background">

    <!-- Gradient background overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_gradient_background" />

    <!-- Center content container -->
    <LinearLayout
        android:id="@+id/splash_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- App Logo with shadow effect -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="16dp"
            app:cardCornerRadius="32dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/splash_logo"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/ic_splash_logo"
                android:contentDescription="App Cloner Logo"
                android:scaleType="fitCenter" />

        </com.google.android.material.card.MaterialCardView>

        <!-- App Title -->
        <TextView
            android:id="@+id/splash_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_full"
            android:textSize="32sp"
            android:textColor="@color/splash_text_primary"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="32dp"
            android:letterSpacing="0.02" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/splash_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_subtitle"
            android:textSize="16sp"
            android:textColor="@color/splash_text_secondary"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- Progress indicator at bottom -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/splash_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:indicatorColor="@color/splash_progress"
        app:indicatorSize="40dp"
        app:trackThickness="3dp"
        app:trackColor="@color/splash_progress_track"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp" />

    <!-- Version info at very bottom -->
    <TextView
        android:id="@+id/splash_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version_info"
        android:textSize="12sp"
        android:textColor="@color/splash_text_tertiary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
